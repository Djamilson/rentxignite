{
  "compilerOptions": {
    "target": "es5",

    /*"moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,*/

    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "allowJs": true,

    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },

    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],

    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  }
}
